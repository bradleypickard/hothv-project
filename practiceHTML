		<button onClick="clickToggle()">Toggle Image!</button>

		<img id="toggleButton" src="https://imgflip.com/s/meme/Surprised-Pikachu.jpg">
		<a href="https://www.google.com">The answer to everything.</a>

		<script>
			let visible = false;

			function clickToggle(){
				let image = document.getElementById('toggleButton');
				if (!visible) {
					visible = true;
					image.style.display = 'block';
				}
				else {
					visible = false;
					image.style.display = 'none';
				}
			}
		</script>

	</body>
